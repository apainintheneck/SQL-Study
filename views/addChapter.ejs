<!DOCTYPE html>
<html>

    <head>
        <title>add chapter</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/admin.css">
    </head>

    <body>
        <%- include('partials/admin-sidebar.ejs') %>

        <main class="page-content card bg-light mt-5">
            <div class="card-header">Add New Chapter</div>
            <div class="card-body">

                <button onclick="window.location.href='/admin';" type="button" class="btn btn-secondary">Return</button>

                <hr>

                <form method="POST">

                    <div class="form-group">
                        <h5><label for="title">Title</label></h5>
                        <input type="text" class="form-control" name="title" maxlength="45" required>
                        <small id="titleHelp" class="form-text text-muted">Maximum 45 characters.</small>
                    </div>

                    <br>

                    <div class="form-group">
                        <h5><label for="description">Description</label></h5>
                        <textarea id="description" class="form-control" name="description" rows="5" maxlength="500" required></textarea>
                        <small id="textAreaHelp" class="form-text text-muted">Maximum 500 characters.</small>
                    </div>

                    <br>

                    <div class="text-center">
                        <button type="submit" class="btn btn-secondary">Submit Chapter</button>
                    </div>

                </form>

            </div>
        </main>

    </body>

</html>
