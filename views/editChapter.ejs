<!DOCTYPE html>
<html>

    <head>
        <%- include('partials/head.ejs') %>
        <script src="/js/edit-chapter.js"></script>
        <link rel="stylesheet" href="/css/sidebar.css">
    </head>

    <body>
        <%- include('partials/admin-sidebar.ejs') %>

        <main id="content">
            <div class="mx-auto card bg-light mt-5" style="max-width: 45rem;">
                <div class="card-header">Edit Chapter</div>
                <div class="card-body">

                    <button onclick="window.location.href='/admin';" type="button" class="btn btn-secondary">Return</button>

                    <hr>

                    <form method="POST">

                        <div class="form-group">
                            <h5><b>Chapter:</b> <select id="chapter" name="chapter" required></select></h5>
                        </div>

                        <br>

                        <div class="form-group">
                            <h5><label for="title">Title</label></h5>
                            <input id="title" type="text" class="form-control" name="title" maxlength="45" disabled required>
                            <small id="titleHelp" class="form-text text-muted">Maximum 45 characters.</small>
                        </div>

                        <br>

                        <div class="form-group">
                            <h5><label for="description">Description</label></h5>
                            <textarea id="description" class="form-control" name="description" rows="5" maxlength="500" disabled required></textarea>
                            <small id="textAreaHelp" class="form-text text-muted">Maximum 500 characters.</small>
                        </div>

                        <br>

                        <div class="text-center">
                            <button type="submit" class="btn btn-secondary">Submit Chapter</button>
                        </div>

                    </form>

                </div>
            </div>
        </main>

    </body>

</html>
